<h1>Add New Track</h1>
<%= bootstrap_form_with model: @track, method: :post, url: album_tracks_path(@album), data: { turbo: false } do |f| %>
  <%= f.text_field :title %>
  <%= f.number_field :length %>
  <%= f.submit %>
<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', album_tracks_path(@album), class: 'btn btn-outline-secondary' %>
</p>